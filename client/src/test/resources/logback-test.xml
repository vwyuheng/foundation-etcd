<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<jmxConfigurator />

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<!-- 典型的日志pattern -->
		<encoder>
			<pattern>%date{HH:mm:ss.SSS} %highlight([%thread] %-5level %logger{36} - %msg%n)</pattern>
		</encoder>
	</appender>
	<!-- root -->
	<root level="INFO">
		<appender-ref ref="console" />
	</root>
</configuration>
